@page "/admin"
@inject AuthService AuthService

@if (AuthService.CurrentUser?.Role != "Admin")
{
    <p class="text-danger">Du har inte behörighet att se denna sida.</p>
}
else
{
    <div class="container mt-5">
        <h2 class="text-center mb-4">Adminpanel</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Hantera användare</h5>
                        <a class="btn btn-outline-primary w-100" href="/manageusers">Gå till</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Hantera evenemang</h5>
                        <a class="btn btn-outline-primary w-100" href="/manageevents">Gå till</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Statistik</h5>
                        <a class="btn btn-outline-primary w-100" href="/statistics">Gå till</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}