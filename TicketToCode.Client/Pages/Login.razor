@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation
@using TicketToCode.Client.Models
@using TicketToCode.Client.Services

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3 class="text-center mb-3">Logga in</h3>
            <div class="form-group mb-3">
                <input @bind="Username" class="form-control" placeholder="Användarnamn" />
            </div>
            <div class="form-group mb-3">
                <input @bind="Password" type="password" class="form-control" placeholder="Lösenord" />
            </div>
            <button @onclick="LoginUser" class="btn btn-primary w-100">Logga in</button>
            <p class="text-danger mt-2">@Message</p>
            @if (AuthService.CurrentUser != null)
            {
                <div class="alert alert-info mt-3">
                    <p>Inloggad som: @AuthService.CurrentUser.Username</p>
                    <p>Roll: @AuthService.CurrentUser.Role</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    string Username = "";
    string Password = "";
    string Message = "";

    async Task LoginUser()
    {
        Message = "";
        var success = await AuthService.Login(Username, Password);
        if (success)
        {
            if (AuthService.CurrentUser != null)
            {
                Message = $"Inloggning lyckades! Roll: {AuthService.CurrentUser.Role}";
                // Navigera beroende på roll + tvinga layout att laddas om
                if (AuthService.CurrentUser.Role == "Admin")
                {
                    Navigation.NavigateTo("/admin", forceLoad: true);
                }
                else
                {
                    Navigation.NavigateTo("/events", forceLoad: true);
                }
            }
            else
            {
                Message = "Inloggning misslyckades - ingen användare hittades";
            }
        }
        else
        {
            Message = "Fel användarnamn eller lösenord.";
        }
    }
}
