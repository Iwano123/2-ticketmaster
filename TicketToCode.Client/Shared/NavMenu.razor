@using TicketToCode.Client.Services
@inject UserState UserState

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">2$TicketMaster</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/">Hem</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/events">Evenemang</a>
                </li>


                @if (UserState.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/mybookings">Mina Bokningar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logga ut</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Registrera</a>
                    </li>
                }

                @if (UserState.IsAdmin)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Adminpanel</a>
                    </li>
                }
            </ul>

            @if (UserState.IsAuthenticated)
            {
                <span class="navbar-text me-2">
                    Inloggad som <strong>@UserState.Username</strong>
                </span>
            }
        </div>
    </div>
</nav>
